<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="5dp"
                  android:weightSum="10"
                  android:elevation="@dimen/cardview_default_elevation">

        <GridLayout android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:columnCount="2"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorLight">

            <TextView android:text="2"
                      android:id="@+id/txtThumbUp"
                      android:layout_margin="5dp"
                      android:layout_gravity="center"/>
            <ImageView
                    android:src="@drawable/ic_thumb_up_impact"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"/>

            <TextView android:text="2"
                      android:id="@+id/txtThumbDown"
                      android:layout_margin="5dp"
                      android:layout_gravity="center"/>
            <ImageView
                    android:src="@drawable/ic_thumb_down_impact"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"/>
        </GridLayout>

        <TextView android:id="@+id/txtDescription"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:layout_weight="8"
                  android:text="Description of meaning"
                  android:layout_gravity="start|center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>


