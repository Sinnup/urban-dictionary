<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

    <TextView
            android:id="@+id/txtWelcome1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/txtWelcome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_search"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome1"/>

    <androidx.appcompat.widget.SearchView
            android:id="@+id/searchTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome2"
            app:queryHint="@string/query_hint"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_sort" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

    </androidx.appcompat.widget.SearchView>

    <Button
            android:id="@+id/imageButton_sort"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome2"
            app:layout_constraintBottom_toTopOf="@+id/recViewSearch"
            android:background="@drawable/ic_thumbs_up_down_impact"
            android:enabled="false"
            android:clickable="false"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/searchTxt"
            app:layout_constraintBottom_toTopOf="@id/txtSource"
            android:focusable="false"
            android:background="@color/colorLight"/>

    <TextView
            android:id="@+id/txtSource"
            android:text="@string/search_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>